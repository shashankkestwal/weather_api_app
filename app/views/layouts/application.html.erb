<!DOCTYPE html>
<html>
  <head>
    <title>WeatherApiApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Navbar</a>
      
      <div class="collapse navbar-collapse" >
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link active" %> 
          </li>
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <% if Current.user %>
            <li class="nav-item active">
              <%= button_to "Log out", signout_path, method: :delete, class: "nav-link active" %> 
            </li>
            <li class="nav-item">
              <%=link_to Current.user.email, update_password_path %>
            </li>

          <% else %>
            <li class="nav-item active">
              <%= link_to "Sign Up", signup_path, class:"mx-3 btn btn-info" %> 
            </li>
            <li class="nav-item">
              <%= link_to "Sign In", signin_path, class:"me-3 btn btn-info" %>
            </li>
          <% end %>
            
        </ul>
      </div>
    </nav>





    <div class="container" role="alert">
      <% flash.each do |type, msg| %>
        <div class="container alert alert-warning" role="alert">
          <%= msg %>
        </div>
      <% end %>








      <%= yield %>


    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</html>
